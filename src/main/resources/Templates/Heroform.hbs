{{#partial "title"}}
    Superheroes
{{/partial}}

{{#partial "content"}}
    <h1>Fill the form to create your Super hero!</h1>
    <form>
        <div class="form-group">
            <input id = "Name" name="Name" class = "form-control" type = "text" placeholder="Name of your Superhero...">
        </div>
        <div class="form-group">
            <input id = "Age" name="Age" class = "form-control" type = "text" placeholder="Age of your Superhero...">
        </div>
        <div class="form-group">
            <input id = "Proficiency" name="Proficiency" class = "form-control" type = "text" placeholder="Super ability of your Superhero...">
        </div>
        <div class="form-group">
            <input id = "Fragility" name="Fragility" class = "form-control" type = "text" placeholder="Flaw of your Superhero...">
        </div>
    </form>
    <button type="submit">Create</button>
{{/partial}}

{{> layout.hbs}}