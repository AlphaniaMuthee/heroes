{{#partial "content"}}
    <h1>Create a squad for your heroes</h1>
    <div id="newSquadForm">
        <form action="/Squads/create" method="post">
            <div class="form-group">
                <input type="text" id="Title" name="Title" class="form-control" placeholder="Name your new Squad..." required>
            </div>
            <div class="form-group">
                <input type="text" id="Ideal" name="Ideal" class="form-control" placeholder="What is the purpose of your squad..." required>
            </div>
            <div class="form-group">
                <input type="number" id="Maximum" name="Maximum" class="form-control" placeholder="What is the maximum number of members in your squad..." required>
            </div>
        </form>
    </div>
{{/partial}}